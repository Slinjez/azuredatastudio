{
	"rulesDirectory": [
		"build/lib/tslint"
	],
	"rules": {
		"double-quoted-string-arg": [
			true,
			{
				"signatures": [
					"localize",
					"nls.localize"
				],
				"argIndex": 1
			}
		],
		"no-floating-promises":{
			"severity": "warn"
		},
		"await-promise": {
			"severity": "warn",
			"options": ["Thenable"]
		},
		"no-promise-as-boolean": {
			"severity": "error",
			"options": ["Thenable"]
		}
	},
	"linterOptions": {
		"exclude": ["src/vs/**/*.ts"]
	}
}
